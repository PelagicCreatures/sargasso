{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 6,
    "sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"rules": {
		"no-var": "error",
		"semi": 0,
		"prefer-const": "error",
		"no-tabs": 0,
		"indent": ["error", "tab"]
	}
}
